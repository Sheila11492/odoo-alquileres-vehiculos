<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sfg_caracteristicas_vehiculos_action" model="ir.actions.act_window">
        <field name="name">Características especiales</field>
        <field name="res_model">caracteristicas.vehiculos</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="sfg_caracteristicas_vehiculos_tree" model="ir.ui.view">
        <field name="name">caracteristicas.vehiculos.tree</field>
        <field name="model">caracteristicas.vehiculos</field>
        <field name="arch" type="xml">
            <tree string="Listado Características de Vehículos" editable="top">
                <field name="secuencia" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="sfg_caracteristicas_vehiculos_form" model="ir.ui.view">
        <field name="name">caracteristicas.vehiculos.form</field>
        <field name="model">caracteristicas.vehiculos</field>
        <field name="arch" type="xml">
            <form string="Características del Vehículo">
                <header/>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>